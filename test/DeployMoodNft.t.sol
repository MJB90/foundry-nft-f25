pragma solidity ^0.8.18;

import {Test, console} from "forge-std/Test.sol";
import {DeployMoodNft} from "../script/DeployMoodNft.s.sol";

contract DeployMoodNftTest is Test {
    DeployMoodNft public deployMoodNft;

    function setUp() external {
        deployMoodNft = new DeployMoodNft();
    }

    function testSvgToImageUri() external view {
        string memory svg = vm.readFile("images/happy.svg");
        string memory expected =
            "data:image/svg+xml;base64,";
        string memory actual = deployMoodNft.svgToImageUri(svg);
        console.log("Actual: ", actual);
        console.log("Expected: ", expected);
        assertEq(
            keccak256(abi.encodePacked(actual)),
            keccak256(abi.encodePacked(expected)),
            "SVG to Image URI conversion failed"
        );
    }
}
